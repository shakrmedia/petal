---
layout: default-layout.hbs
---

<div class="container">
<div class="row">
	<div class="col-4 colspan-3">
		<section>
			{{> body }}
			
			<div class="section-footer">
				{{> back-to-top }}
			</div>
		</section>
	</div>
	<div class="col-4">
		{{#is area "start"}}
		<nav id="sidenav">
			<ul>
				{{#withSort pages "data.list-order"}}
					{{#is data.section "start"}}
					<li{{#is ../../page.dest this.dest}} class="active"{{/is}}><a href="{{relative ../../page.dest this.dest}}">{{data.title}}</a></li>
					{{/is}}
				{{/withSort}}
			</ul>
		</nav> 
		{{/is}}


		{{#is area "docs"}}
		<nav id="sidenav">
			
			<h5 class="list-header">Introduction</h5>
			<ul>
				{{#withSort pages "data.list-order"}}
					{{#is data.section "intro"}}
					<li{{#is ../../page.dest this.dest}} class="active"{{/is}}><a href="{{relative ../../page.dest this.dest}}">{{data.title}}</a></li>
					{{/is}}
				{{/withSort}}
			</ul>

			<h5 class="list-header">Components</h5>
			<ul>
				{{#withSort pages "data.list-order"}}
					{{#is data.section "components"}}
					<li{{#is ../../page.dest this.dest}} class="active"{{/is}}><a href="{{relative ../../page.dest this.dest}}">{{data.title}}</a></li>
					{{/is}}
				{{/withSort}}
			</ul>
			
			{{#is section "components"}}
			<p>
				{{> back-to-top }}
			</p>

			<button class="btn hollow red" id="btn-demo-toggle" data-toggle="toggle">Toggle Light/Dark</button>
			{{/is}}
		</nav> 
		{{/is}}
	</div>
</div>
</div><!-- container end -->
